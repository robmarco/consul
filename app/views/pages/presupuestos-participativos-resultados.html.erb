<% provide :title, "Presupuestos particpativos | Resultados" %>
<% provide :social_media_meta_tags do %>
  <%= render "shared/social_media_meta_tags_participatory_budget" %>
<% end %>

<%= javascript_include_tag "chart", 'data-turbolinks-track' => true %>
<%= javascript_include_tag "participatory-budget-charts", 'data-turbolinks-track' => true %>

<div class="expanded spending-proposals results no-margin-top">
  <div class="row">
    <div class="small-12 column padding">
      <%= link_to participatory_budget_path, class: "left back" do %>
        <i class="icon-angle-left"></i>
        <%= t("pages.processes.back") %>
      <% end %>
      <div class="text-center">
        <h1 class="title">PRESUPUESTOS PARTICIPATIVOS</h1>
        <h2>Resultados de participación</h2>
      </div>
    </div>
  </div>
</div>

<div class="survey-results margin">

  <div class="row" data-equalizer>

    <!-- Resultados generales -->
    <div class="small-12 medium-6 column text-right" data-equalizer-watch>
      <div class="panel purple">
        <p>TOTAL PROPUESTAS VIABLES</p>
        <p class="big-number">6.961</p>
      </div>

      <div class="small-12 column margin-top">
        <p class="chart-legend">
          <strong>PROPUESTAS TOTALES</strong>: 8.249<br>

          <span class="label" style="background: #E87461"></span>&nbsp;
          <strong>PROPUESTAS INVIABLES</strong>: 1.288 (20,45%)<br>

          <span class="label" style="background: #9CC56A"></span>&nbsp;
          <strong>PROPUESTAS VIABLES</strong>: 6.961 (80,02%)<br>
        </p>
      </div>
    </div>

    <div class="medium-4 show-for-medium column" data-equalizer-watch>
      <canvas id="chart-totals" width="300" height="300"></canvas>
    </div>
  </div>

  <div class="clear"></div>
  <hr>

  <div class="row" data-equalizer>

    <!-- Participación por sexo -->
    <div class="small-12 column">
      <h2 class="subtitle">Participación<br>por sexo</h2>
    </div>

    <hr>

    <div class="small-12 medium-6 column show-for-medium">
      <div class="panel text-center" data-equalizer-watch>
        <%= image_tag ('survey_results/sex.png') %>
        <br>
        <div class="large-offset-3 large-5 padding">
          <canvas id="chart-sex" width="300" height="300"></canvas>
        </div>
      </div>
    </div>

    <div class="small-12 medium-3 column">
      <div class="panel text-right chart-legend" data-equalizer-watch>
        <p>
          <span class="label" style="background: #FF6600"></span>
          &nbsp;HOMBRES (50,00%)
        </p>
        <p class="big-number">3.394</p>
      </div>
    </div>

    <div class="small-12 medium-3 column">
      <div class="panel text-left chart-legend" data-equalizer-watch>
        <p>
          <span class="label" style="background: #FF9E01"></span>
          &nbsp;MUJERES (50,00%)
        </p>
        <p class="big-number">3.466</p>
      </div>
    </div>
  </div>

  <div class="row">

    <!-- Participación por grupos de edad -->
    <div class="small-12 column">
      <h2 class="subtitle">Participación por<br>grupos de edad</h2>
